<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".task3.DrawCircleActivity">

	<EditText
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/nEditText"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView14"
			android:layout_marginStart="8dp"
			app:layout_constraintHorizontal_bias="0.51" app:layout_constraintBottom_toTopOf="@+id/applyButton"
			android:layout_marginBottom="8dp"/>
	<TextView
			android:text="N:"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:id="@+id/textView17"
			android:textSize="32sp"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/applyButton"
			android:layout_marginBottom="8dp"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/yEditText"
			android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/rEditText" android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView14"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/xEditText"
			app:layout_constraintStart_toEndOf="@+id/textView14"
			android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/yEditText"/>
	<EditText
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/rEditText"
			android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView14"
			android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/nEditText"/>
	<TextView
			android:text="X:"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:id="@+id/textView16"
			android:textSize="32sp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView15" android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:text="Y"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:id="@+id/textView15"
			android:textSize="32sp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView14" android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:text="R:"
			android:layout_width="wrap_content"
			android:layout_height="48dp"
			android:id="@+id/textView14"
			android:textSize="32sp" android:layout_marginBottom="8dp"
			android:layout_marginStart="8dp"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView17"/>
	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/file_image"
			android:id="@+id/drawCircleImageView" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView16" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"/>
	<Button
			android:text="apply"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/applyButton" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"/>
	<Button
			android:text="wu circle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/wuCircleButton" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>