<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".EditCustomMatrixActivity">

	<Spinner
			android:layout_width="0dp"
			android:id="@+id/heightSpinner" app:layout_constraintStart_toEndOf="@+id/textView"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			android:layout_height="48dp" app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
			android:layout_marginStart="8dp"/>
	<TextView
			android:text="Width:"
			android:layout_width="0dp"
			android:layout_height="48dp"
			app:layout_constraintWidth_percent="0.25"
			android:id="@+id/textView" android:textSize="32sp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView2"
			android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:text="Height:"
			android:layout_width="0dp"
			android:layout_height="48dp"
			app:layout_constraintWidth_percent="0.25"
			android:id="@+id/textView2" android:textSize="32sp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
			android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:text="Offset:"
			android:layout_width="0dp"
			android:layout_height="48dp"
			app:layout_constraintWidth_percent="0.25"
			android:id="@+id/textView3" android:textSize="32sp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView5"
			android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
	<TextView
			android:text="Anchor:"
			android:layout_width="0dp"
			android:layout_height="48dp"
			app:layout_constraintWidth_percent="0.25"
			android:id="@+id/textView4" android:textSize="32sp"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
			android:background="@android:color/holo_blue_bright"/>
	<TextView
			android:text="Divisor:"
			android:layout_width="0dp"
			android:layout_height="48dp"
			app:layout_constraintWidth_percent="0.25"
			android:id="@+id/textView5" android:textSize="32sp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView4"/>
	<Spinner
			android:layout_width="0dp"
			android:id="@+id/widthSpinner" app:layout_constraintStart_toEndOf="@+id/textView"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView2"
			android:layout_height="48dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="8dp"/>
	<EditText
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:inputType="numberSigned"
			android:ems="10"
			android:id="@+id/offsetEditText"
			app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView5" android:textSize="24sp"/>
	<EditText
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:inputType="numberSigned|numberDecimal"
			android:ems="10"
			android:id="@+id/divisorEditText"
			app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView4" android:textSize="24sp"/>
	<EditText
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:inputType="number"
			android:ems="10"
			android:id="@+id/anchorEditText"
			app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="0dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:id="@+id/matrixLayout">
	</LinearLayout>

</android.support.constraint.ConstraintLayout>