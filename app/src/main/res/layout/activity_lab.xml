<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".LabActivity">

	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/file_image"
			android:id="@+id/labView" android:layout_marginEnd="8dp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout6"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="wrap_content" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout6">
		<Button
				android:text="lab"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:id="@+id/labButton"
				tools:layout_editor_absoluteY="549dp" tools:layout_editor_absoluteX="0dp" android:layout_weight="1"/>
		<Button
				android:text="ordered dithering"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:id="@+id/ditheringButton" android:layout_weight="1"/>
		<Button
				android:text="popularity algorithm"
				android:layout_width="match_parent"
				android:layout_height="match_parent" android:id="@+id/popularityButton" android:layout_weight="1"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>