<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:weightSum="1.0"
                                             tools:context=".MainActivity" android:id="@+id/constraintLayout2">

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout3" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout5" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp">

		<Button
				android:text="Import"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:id="@+id/importButton"
				android:layout_width="match_parent"/>
		<Button
				android:text="Save"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/saveButton"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout5">
		<Button
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="import default"
				android:id="@+id/importDefaultButton"/>
		<Button
				android:layout_weight="1"
				android:text="set as default"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/setDefaultButton"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout4">

		<Button
				android:layout_weight="1"
				android:text="functional filters"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/functionalFiltersButton"/>
		<Button
				android:layout_weight="1"
				android:text="convolution filters"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/button6"/>
	</LinearLayout>

	<android.support.constraint.ConstraintLayout
			android:layout_width="0dp"
			android:layout_height="0dp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/constraintLayout">

		<ImageView
				android:layout_width="0dp"
				app:layout_constraintHeight_percent="0.48"
				app:srcCompat="@drawable/file_image"
				android:id="@+id/defaultImageView"
				android:layout_weight="1"
				app:layout_constraintStart_toStartOf="@+id/constraintLayout"
				app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toTopOf="@+id/constraintLayout" android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp" android:layout_height="0dp"/>
		<ImageView
				android:layout_width="0dp"
				app:srcCompat="@drawable/file_image"
				android:id="@+id/currentImageView"
				android:layout_weight="1"
				app:layout_constraintHeight_percent="0.48"
				app:layout_constraintStart_toStartOf="@+id/constraintLayout"
				app:layout_constraintTop_toBottomOf="@+id/defaultImageView"
				app:layout_constraintEnd_toEndOf="@+id/constraintLayout" android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toBottomOf="parent" android:layout_height="0dp"/>
	</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>