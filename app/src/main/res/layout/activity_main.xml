<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:weightSum="1.0"
                                             tools:context=".MainActivity" android:id="@+id/constraintLayout2">

	<Button
			android:text="task 2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/task2Button" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			style="@style/Widget.AppCompat.Button.Borderless"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout3" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout5" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp">

		<Button
				android:text="Import"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:id="@+id/importButton"
				android:layout_width="match_parent" style="@style/Widget.AppCompat.Button.Borderless"/>
		<Button
				android:text="Save"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/saveButton" style="@style/Widget.AppCompat.Button.Borderless"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout5">
		<Button
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="import default"
				android:id="@+id/importDefaultButton" style="@style/Widget.AppCompat.Button.Borderless"/>
		<Button
				android:layout_weight="1"
				android:text="set as default"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/setDefaultButton" style="@style/Widget.AppCompat.Button.Borderless"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout4" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/task2Button">

		<Button
				android:layout_weight="1"
				android:text="functional filters"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/functionalFiltersButton" style="@style/Widget.AppCompat.Button.Borderless"/>
		<Button
				android:layout_weight="1"
				android:text="convolution filters"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/convolutionFiltersButton" style="@style/Widget.AppCompat.Button.Borderless"/>
	</LinearLayout>

	<android.support.constraint.ConstraintLayout
			android:layout_width="0dp"
			android:layout_height="0dp" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/constraintLayout">

		<ImageView
				android:layout_width="0dp"
				app:layout_constraintHeight_percent="0.48"
				app:srcCompat="@drawable/file_image"
				android:id="@+id/defaultImageView"
				android:layout_weight="1"
				app:layout_constraintStart_toStartOf="@+id/constraintLayout"
				app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
				android:layout_marginTop="8dp"
				app:layout_constraintTop_toTopOf="@+id/constraintLayout" android:layout_marginEnd="8dp"
				android:layout_marginStart="8dp" android:layout_height="0dp"/>
		<ImageView
				android:layout_width="0dp"
				app:srcCompat="@drawable/file_image"
				android:id="@+id/currentImageView"
				android:layout_weight="1"
				app:layout_constraintHeight_percent="0.48"
				app:layout_constraintStart_toStartOf="@+id/constraintLayout"
				app:layout_constraintTop_toBottomOf="@+id/defaultImageView"
				app:layout_constraintEnd_toEndOf="@+id/constraintLayout" android:layout_marginTop="8dp"
				android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
				app:layout_constraintBottom_toBottomOf="parent" android:layout_height="0dp"/>
	</android.support.constraint.ConstraintLayout>
	<Button
			android:text="Task 3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/task3Button"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/task2Button" android:layout_marginStart="8dp"
			style="@style/Widget.AppCompat.Button.Borderless"/>

</android.support.constraint.ConstraintLayout>