<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    tools:context=".MainActivity">

	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp"
			app:srcCompat="@drawable/file_image"
			android:id="@+id/imageView"
			android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout3"/>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:id="@+id/linearLayout3" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout5" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp">

		<Button
				android:text="Import"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:id="@+id/importButton"
				android:layout_width="match_parent"/>
		<Button
				android:text="Save"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/button2"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout4" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout5">
		<Button
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:text="import default"
				android:id="@+id/button3"/>
		<Button
				android:layout_weight="1"
				android:text="set as default"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/button4"/>
	</LinearLayout>

	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="395dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:id="@+id/linearLayout4">

		<Button
				android:layout_weight="1"
				android:text="functional filters"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/button5"/>
		<Button
				android:layout_weight="1"
				android:text="convolution filters"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:id="@+id/button6"/>
	</LinearLayout>

</android.support.constraint.ConstraintLayout>