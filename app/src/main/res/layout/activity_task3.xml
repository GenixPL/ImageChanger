<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".task3.Task3Activity">

	<ImageView
			android:layout_width="0dp"
			android:layout_height="0dp" app:srcCompat="@drawable/file_image"
			android:id="@+id/task3ImageView" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toTopOf="@+id/drawLineButton"/>
	<Button
			android:text="draw line"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/drawLineButton" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp" style="@style/Widget.AppCompat.Button.Borderless"/>
	<Button
			android:text="draw circle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/drawCircleButton" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="parent" style="@style/Widget.AppCompat.Button.Borderless"/>
</android.support.constraint.ConstraintLayout>